variant: fcos
version: 1.5.0

storage:
  filesystems:
    - device: /dev/disk/by-label/persistent
      format: xfs
      path: /mnt/persistent
      wipe_filesystem: false
      label: persistent
      with_mount_unit: true

  files:
    - path: /home/cprecioso/.ssh/authorized_keys.d/cprecioso
      contents:
        source: https://github.com/cprecioso.keys

passwd:
  users:
    - name: cprecioso
